# ===========================================
# MooveLabs SaaS - Environment Variables
# ===========================================
# Copie este arquivo para .env e preencha os valores

# Database (PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/db_moovelabs?schema=public"

# JWT Secrets (gere secrets únicos para produção!)
JWT_SECRET="your-jwt-secret-here"
JWT_REFRESH_SECRET="your-refresh-secret-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Backend
BACKEND_PORT=3002
NODE_ENV=development

# Dashboard
VITE_API_URL=http://localhost:3002

# n8n Integration
N8N_HOST=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key

# Site
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3003
